<Window
    x:Class="WinAppTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:map="using:J4JSoftware.J4JMapWinLibrary"
    xmlns:local="using:WinAppTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">

        <map:J4JMapControl Height="400" Width="400"
                           MapName="BingMaps"
                           MapScale="{Binding ElementName=sliderScale, Path=Value, Mode=TwoWay}"
                           Heading="0"
                           Center="37.5072N,122.2605W"/>

        <Slider x:Name="sliderScale"
            Minimum="0" 
            Value="13"
            Maximum="20"/>

    </StackPanel>
</Window>
